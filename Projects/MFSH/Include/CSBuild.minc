//
// Define a CS Class.
//
#macro CSBuild.DefineClass() > "%CSBuildDir%\\%BaseDir%\\%BaseNameNoExtension%.csBuild"
  `{
  `  "defineClass" : {
  `    "className" : "%Id%"
  `  }
  `},
#end

//
// Attach an interface to class.
//
#macro CSBuild.ImplementFragment(%IName%) > "%CSBuildDir%\\%BaseDir%\\%BaseNameNoExtension%.csBuild"
  `{
  `  "implementFragment" : {
  `    "fragmentName" : "%IName%"
  `  }
  `},

#end


//
// Define a codesystem.
//
#macro CSBuild.DefineCodeSystem() > "%CSBuildDir%\\%BaseDir%\\%BaseNameNoExtension%.csBuild"
  `{
  `  "defineCodeSystem" : {
  `    "name" : "%Id%"
  `  }
  `},
#end

//
// Define a valueset.
//
#macro CSBuild.DefineValueSet() > "%CSBuildDir%\\%BaseDir%\\%BaseNameNoExtension%.csBuild"
  `{
  `  "defineValueSet" : {
  `    "name" : "%Id%"
  `  }
  `},
#end


//
// Define an CS Interface.
// Name is name of interface.
// Id is name of profile that implements interface (used to query element definitions)
//
#macro CSBuild.DefineFragment(%Name%)
  `{
  `  "defineFragment" : {
  `    "fragmentName" : "%Name%",
  `    "implementationId" : "%Id%"
  `  }
  `},
#end

//
// Add a fhir property.
//
#macro CSBuild.AddProperty(%elementId%, %propertyName%)
  `{
  `  "addProperty" : {
  `    "propertyName" : "%propertyName%",
  `    "elementId" : "%elementId%"
  `  }
  `},
#end

