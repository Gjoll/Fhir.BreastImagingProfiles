//
// Make a graph node that refers to a profile.
//
#macro Graph.NodeProfile(DisplayName) > "%GraphDir%\\%BaseDir%\\%BaseNameNoExtension%.nodeGraph"
  `  {
  `    "node" : {
  `      "nodeName" : "%Id%/",
  `      "anchor" : {
  `        "url" : "%Url%"
  `      },
  `      "displayName" : "DisplayName",
  `      "cssClass" : "profile",
  `      "traceMsg" : "%ApplyStackFrame%"
  `    }
  `  },
  `  {
  `    "graph" : {
  `      "nodeName" : "%Id%/",
  `      "traversalName" : "focus",
  `    }
  `  },
#end

