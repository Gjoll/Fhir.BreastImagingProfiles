//
// Make a graph node that refers to an element in a profile.
//
#macro Graph.NodeElement(%Path%, DisplayName) > "%GraphDir%\\%BaseDir%\\%BaseNameNoExtension%.nodeGraph"
  `  {
  `    "node" : {
  `      "nodeName" : "%Id%/%Path%/",
  `      "anchor" : {
  `        "url" : "%Url%",
  `        "item" : "%Path%"
  `      },
  `      "displayName" : "DisplayName",
  `      "cssClass" : "element",
  `      "lhsAnnotationText": "^%Id%.%Path%",
  `      "traceMsg" : "%ApplyStackFrame%"
  `    }
  `  },
#end

